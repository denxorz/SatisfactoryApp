@using Denxorz.Satisfactory.Routes
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.Extensions.Configuration
@using Microsoft.JSInterop
@using MudBlazor
@using SatisfactoryApp.Services
@using SatisfactoryApp.Services.Factories
@using SatisfactoryApp.Services.Resources
@using SatisfactoryApp.Services.Stations
using Microsoft.AspNetCore.Components
@implements IDisposable
@inject FactoryStore FactoryStore
@inject StationStore StationStore
@inject ResourceStore ResourceStore
@inject HttpClient HttpClient
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<MudAppBar Elevation="1">
    <img src="/images/ctor.png" alt="constructor" style="height: 40px; width: 40px; margin-right: 16px;" />
    <MudText Typo="Typo.h6">Stats of your Satisfactory</MudText>
    <MudSpacer />
    @if (Test == true)
    {
        <MudButton Variant="Variant.Outlined"
                   Color="Color.Secondary"
                   StartIcon="@MudBlazor.FontIcons.MaterialSymbols.Outlined.Science"
                   OnClick="LoadTestDataAsync"
                   Disabled="@_isCalculating"
                   Style="margin-right: 8px;">
            Load Test Data
        </MudButton>
        <MudButton Variant="Variant.Outlined"
                   Color="Color.Primary"
                   StartIcon="@MudBlazor.FontIcons.MaterialSymbols.Outlined.Save"
                   OnClick="SaveStoresToJsonAsync"
                   Disabled="@_isCalculating"
                   Style="margin-right: 8px;">
            Save to JSON
        </MudButton>
    }
    <MudFileUpload T="IReadOnlyList<IBrowserFile>"
                   @ref="@_fileUpload"
                   OnFilesChanged="OnInputFileChanged"
                   Hidden="@false"
                   InputClass="file-upload-input"
                   tabindex="-1"
                   @ondrop="@ClearDragClass"
                   @ondragenter="@SetDragClass"
                   @ondragleave="@ClearDragClass"
                   @ondragend="@ClearDragClass">
        <ActivatorContent>
            <MudPaper Outlined="true" Class="@_dragClass" Width="200px">
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                    @if (_isCalculating)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                        <MudText Typo="Typo.body2">Processing...</MudText>
                    }
                    else if (_selectedFile is not null || !string.IsNullOrEmpty(_loadedFileName))
                    {
                        <MudIcon Icon="@MudBlazor.FontIcons.MaterialSymbols.Outlined.CheckCircle" Color="Color.Success" Size="Size.Small" />
                        <MudText Typo="Typo.body2">@(_selectedFile?.Name ?? _loadedFileName)</MudText>
                    }
                    else
                    {
                        <MudIcon Icon="@MudBlazor.FontIcons.MaterialSymbols.Outlined.CloudUpload" Size="Size.Small" />
                        <MudText Typo="Typo.body2">Drop save file here</MudText>
                    }
                </MudStack>
            </MudPaper>
        </ActivatorContent>
    </MudFileUpload>
    @if (!string.IsNullOrEmpty(_error))
    {
        <MudTooltip Text="@_error">
            <MudIcon Icon="@MudBlazor.FontIcons.MaterialSymbols.Outlined.Error" Color="Color.Error" Size="Size.Small" />
        </MudTooltip>
    }
    @if (_showDesktopDownload)
    {
        <MudLink Href="@DesktopDownloadUrl" Target="_blank" Rel="noopener" Style="margin-left: 8px;">
            Download desktop app
        </MudLink>
    }
</MudAppBar>

<style>
    .file-upload-input {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 10;
        opacity: 0;
    }
</style>

@code {



    [SupplyParameterFromQuery]
    public bool? Example { get; set; }

    [SupplyParameterFromQuery]
    public bool? Test { get; set; }

    private const string DefaultDragClass = "relative rounded-lg border-2 border-dashed py-2 px-3 mud-width-full";
    private string _dragClass = DefaultDragClass;
    private MudFileUpload<IReadOnlyList<IBrowserFile>>? _fileUpload;
    private IBrowserFile? _selectedFile;
    private bool _isCalculating;
    private string? _error;
    private bool _isExampleFileLoaded;
    private string? _loadedFileName;
    private DotNetObjectReference<Toolbar>? _dotNetRef;
    private bool _showDesktopDownload;

    private const string DesktopDownloadUrl =
        "https://github.com/denxorz/SatisfactoryApp/releases/latest/download/SatisfactoryDesktop-win-Setup.exe";

    protected override async Task OnInitializedAsync()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
        _dotNetRef = DotNetObjectReference.Create(this);
        await JSRuntime.InvokeVoidAsync("registerJsonMessageHandler", _dotNetRef);
        await CheckAndLoadTestDataAsync();
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        await CheckAndLoadTestDataAsync();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
        _dotNetRef?.Dispose();
        _ = JSRuntime.InvokeVoidAsync("unregisterJsonMessageHandler");
    }

    private async Task CheckAndLoadTestDataAsync()
    {
        if (_isExampleFileLoaded) return;

        if (Example == true)
        {
            _isExampleFileLoaded = true;

            await LoadTestDataAsync();
            if (Example == true)
            {
                _loadedFileName = "Sample map";
            }
        }
        else
        {
            _loadedFileName = null;
        }
    }

    private async Task LoadTestDataAsync()
    {
        await LoadDataAsync(DataService.GetTestDataAsync(HttpClient));
    }

    [JSInvokable]
    public async Task LoadJsonFromMessage(string jsonContent, string? filename)
    {
        await LoadDataAsync(Task.FromResult(DataService.ImportFromJson(jsonContent, filename)));
    }

    private async Task LoadDataAsync(Task<SaveData> loadSaveData)
    {
        try
        {
            _isCalculating = true;
            _error = null;
            _showDesktopDownload = false;
            StateHasChanged();

            var saveData = await loadSaveData;
            FactoryStore.Set(saveData.Factories, saveData.PowerCircuits);
            StationStore.Set(saveData.Stations, saveData.Uploaders);
            ResourceStore.Set(saveData.Resources);

            _loadedFileName = saveData.Filename;
            _error = null;
        }
        catch (Exception ex)
        {
            _showDesktopDownload = ShouldOfferDesktopDownload(ex);
            _error = _showDesktopDownload
                ? "File too large for the web app. Please use the desktop app."
                : ex.Message;
            Console.WriteLine($"LoadData: {_error}");
        }
        finally
        {
            _isCalculating = false;
            StateHasChanged();
        }
    }

    private async Task CalculateRoutes()
    {
        if (_selectedFile == null)
        {
            return;
        }

        await LoadDataAsync(LoadFromBrowserFile());
    }

    private async Task<SaveData> LoadFromBrowserFile()
    {
        using var memoryStream = await OpenFileAndCopyToMemoryStreamAsync();
        var result = SaveDetails.LoadFromStream(memoryStream);

        return SaveData.FromSaveDetails(_selectedFile.Name, result);
    }

    private async Task<MemoryStream> OpenFileAndCopyToMemoryStreamAsync()
    {
        if (_selectedFile == null)
            throw new InvalidOperationException("No file selected");

        using var stream = _selectedFile.OpenReadStream(maxAllowedSize: 100_000_000);
        var memoryStream = new MemoryStream();
        await stream.CopyToAsync(memoryStream);
        memoryStream.Position = 0;

        return memoryStream;
    }

    private async Task ClearAsync()
    {
        await (_fileUpload?.ClearAsync() ?? Task.CompletedTask);
        ClearDragClass();
    }

    private Task OpenFilePickerAsync()
        => _fileUpload?.OpenFilePickerAsync() ?? Task.CompletedTask;

    private async Task OnInputFileChanged(InputFileChangeEventArgs e)
    {
        ClearDragClass();
        _selectedFile = e.File;
        _loadedFileName = null;
        _showDesktopDownload = false;
        await CalculateRoutes();
    }

    private void SetDragClass() => _dragClass = $"{DefaultDragClass} mud-border-primary";
    private void ClearDragClass() => _dragClass = DefaultDragClass;

    private static bool ShouldOfferDesktopDownload(Exception ex)
    {
        var message = ex.Message ?? string.Empty;
        return message.Contains("Garbage collector could not allocate", StringComparison.OrdinalIgnoreCase);
    }

    private async Task SaveStoresToJsonAsync()
    {
        try
        {
            _isCalculating = true;
            _error = null;
            StateHasChanged();

            var jsonContent = DataService.ExportToJson(FactoryStore, StationStore, ResourceStore);
            var filename = $"satisfactory-data-{DateTime.Now:yyyyMMdd-HHmmss}.json";

            await JSRuntime.InvokeVoidAsync("downloadJsonFile", jsonContent, filename);
            _error = null;
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            Console.WriteLine($"SaveStoresToJson: {_error}");
        }
        finally
        {
            _isCalculating = false;
        }
    }
}

