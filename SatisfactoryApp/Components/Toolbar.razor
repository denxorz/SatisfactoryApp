@using SatisfactoryApp.Services
@using Denxorz.Satisfactory.Routes
@using MudBlazor
@using Microsoft.JSInterop
@using Microsoft.AspNetCore.WebUtilities
@inject FactoryStore FactoryStore
@inject StationStore StationStore
@inject ResourceStore ResourceStore
@inject HttpClient HttpClient
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<MudAppBar Elevation="1">
    <img src="/images/ctor.png" alt="constructor" style="height: 40px; width: 40px; margin-right: 16px;" />
    <MudText Typo="Typo.h6">Stats of your Satisfactory</MudText>
    <MudSpacer />
    @if (_testModeEnabled)
    {
        <MudButton Variant="Variant.Outlined" 
                   Color="Color.Secondary" 
                   StartIcon="@Icons.Material.Filled.Science"
                   OnClick="LoadTestDataAsync"
                   Disabled="@_isCalculating"
                   Style="margin-right: 8px;">
            Load Test Data
        </MudButton>
        <MudButton Variant="Variant.Outlined" 
                   Color="Color.Primary" 
                   StartIcon="@Icons.Material.Filled.Save"
                   OnClick="SaveStoresToJsonAsync"
                   Disabled="@_isCalculating"
                   Style="margin-right: 8px;">
            Save to JSON
        </MudButton>
    }
    <MudFileUpload T="IReadOnlyList<IBrowserFile>"
                   @ref="@_fileUpload"
                   OnFilesChanged="OnInputFileChanged"
                   Hidden="@false"
                   InputClass="file-upload-input"
                   tabindex="-1"
                   @ondrop="@ClearDragClass"
                   @ondragenter="@SetDragClass"
                   @ondragleave="@ClearDragClass"
                   @ondragend="@ClearDragClass">
        <ActivatorContent>
            <MudPaper Outlined="true" Class="@_dragClass" Width="200px">
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                    @if (_isCalculating)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                        <MudText Typo="Typo.body2">Processing...</MudText>
                    }
                    else if (_selectedFile is not null)
                    {
                        <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" />
                        <MudText Typo="Typo.body2">@_selectedFile?.Name</MudText>
                    }
                    else
                    {
                        <MudIcon Icon="@Icons.Material.Filled.CloudUpload" Size="Size.Small" />
                        <MudText Typo="Typo.body2">Drop save file here</MudText>
                    }
                </MudStack>
            </MudPaper>
        </ActivatorContent>
    </MudFileUpload>
    @if (!string.IsNullOrEmpty(_error))
    {
        <MudTooltip Text="@_error">
            <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" Size="Size.Small" />
        </MudTooltip>
    }
</MudAppBar>

<style>
    .file-upload-input {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 10;
        opacity: 0;
    }
</style>

    @code {
    private const string DefaultDragClass = "relative rounded-lg border-2 border-dashed py-2 px-3 mud-width-full";
    private string _dragClass = DefaultDragClass;
    private MudFileUpload<IReadOnlyList<IBrowserFile>>? _fileUpload;
    private IBrowserFile? _selectedFile;
    private bool _isCalculating;
    private string? _error;
    private bool _testModeEnabled;

    protected override async Task OnInitializedAsync()
    {
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        var queryParams = QueryHelpers.ParseQuery(uri.Query);
        _testModeEnabled = queryParams.TryGetValue("test", out var testValue) && 
                          testValue.ToString().Equals("true", StringComparison.OrdinalIgnoreCase);
        
        if (_testModeEnabled)
        {
            await LoadTestDataAsync();
        }
    }

    private async Task LoadTestDataAsync()
    {
        try
        {
            _isCalculating = true;
            _error = null;
            StateHasChanged();

            var (factories, powerCircuits, stations, uploaders, resources) = await TestDataService.GetTestDataAsync(HttpClient);
            FactoryStore.Set(factories, powerCircuits);
            StationStore.Set(stations, uploaders);
            ResourceStore.Set(resources);
            _selectedFile = null;
            _error = null;
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            Console.WriteLine($"LoadTestData: {_error}");
        }
        finally
        {
            _isCalculating = false;
            StateHasChanged();
        }
    }

    private async Task CalculateRoutes()
    {
        _isCalculating = true;
        _error = null;
        StateHasChanged();

        try
        {
            if (_selectedFile == null)
            {
                return;
            }

            using var memoryStream = await OpenFileAndCopyToMemoryStreamAsync();

            var result = SaveDetails.LoadFromStream(memoryStream);
            FactoryStore.Set(result.Factories, result.PowerCircuits);
            StationStore.Set(result.Stations, result.Uploaders);
            ResourceStore.Set(result.Resources);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            Console.WriteLine($"CalculateRoutes: {_error}");
        }
        finally
        {
            _isCalculating = false;
            StateHasChanged();
        }
    }

    private async Task<MemoryStream> OpenFileAndCopyToMemoryStreamAsync()
    {
        if (_selectedFile == null)
            throw new InvalidOperationException("No file selected");

        using var stream = _selectedFile.OpenReadStream(maxAllowedSize: 100_000_000);
        var memoryStream = new MemoryStream();
        await stream.CopyToAsync(memoryStream);
        memoryStream.Position = 0;

        return memoryStream;
    }

    private async Task ClearAsync()
    {
        await (_fileUpload?.ClearAsync() ?? Task.CompletedTask);
        ClearDragClass();
    }

    private Task OpenFilePickerAsync()
        => _fileUpload?.OpenFilePickerAsync() ?? Task.CompletedTask;

    private async Task OnInputFileChanged(InputFileChangeEventArgs e)
    {
        ClearDragClass();
        _selectedFile = e.File;
        await CalculateRoutes();
    }

    private void SetDragClass() => _dragClass = $"{DefaultDragClass} mud-border-primary";
    private void ClearDragClass() => _dragClass = DefaultDragClass;

    private async Task SaveStoresToJsonAsync()
    {
        try
        {
            _isCalculating = true;
            _error = null;
            StateHasChanged();

            var jsonContent = TestDataService.ExportToJson(FactoryStore, StationStore, ResourceStore);
            var filename = $"satisfactory-data-{DateTime.Now:yyyyMMdd-HHmmss}.json";
            
            await JSRuntime.InvokeVoidAsync("downloadJsonFile", jsonContent, filename);
            _error = null;
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            Console.WriteLine($"SaveStoresToJson: {_error}");
        }
        finally
        {
            _isCalculating = false;
            StateHasChanged();
        }
    }
}

