@using MudBlazor

<MudGrid Spacing="3">
    <MudItem xs="12">
        <MudCard Outlined="true" Square="true" Class="border-solid border-4 mud-border-primary">
            <MudCardHeader Class="mud-primary pa-0 pl-1">
                <MudText Class="primary-card-header-title" Color="Color.Surface">You</MudText>
            </MudCardHeader>
            <MudCardContent Class="pa-3">
                <MudText>Thank you for using Stats of your Satisfactory!</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12">
        <MudCard Outlined="true" Square="true" Class="border-solid border-4 mud-border-primary">
            <MudCardHeader Class="mud-primary pa-0 pl-1">
                <MudText Class="primary-card-header-title" Color="Color.Surface">Testing</MudText>
            </MudCardHeader>
            <MudCardContent Class="pa-3">
                <MudText>
                    <MudLink Href="https://github.com/Xcone" Target="_blank" Style="text-decoration: none;" Class="d-flex align-center" Color="Color.Default">
                        <MudIcon Icon="@Icons.Material.Filled.Grade" Size="Size.Small" Class="mr-1" />
                        xcone
                    </MudLink>
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12">
        <MudCard Outlined="true" Square="true" Class="border-solid border-4 mud-border-primary">
            <MudCardHeader Class="mud-primary pa-0 pl-1">
                <MudText Class="primary-card-header-title" Color="Color.Surface">Tools & Libraries</MudText>
            </MudCardHeader>
            <MudCardContent Class="pa-3">
                <MudStack Spacing="2">
                    <MudLink Href="https://www.satisfactorygame.com/" Target="_blank" Style="text-decoration: none;" Class="d-flex align-center" Color="Color.Default">
                        <MudIcon Icon="@Icons.Material.Filled.Factory" Size="Size.Small" Class="mr-1" />
                        Satisfactory
                    </MudLink>
                    <MudLink Href="https://github.com/R3dByt3/SatisfactorySaveNet" Target="_blank" Style="text-decoration: none;" Class="d-flex align-center" Color="Color.Default">
                        <MudIcon Icon="@Icons.Material.Filled.Save" Size="Size.Small" Class="mr-1" />
                        SatisfactorySaveNet by R3dByt3 - For the save file parsing
                    </MudLink>
                    <MudLink Href="https://visualstudio.microsoft.com/vs/community/" Target="_blank" Style="text-decoration: none;" Class="d-flex align-center" Color="Color.Default">
                        <MudIcon Icon="@Icons.Material.Filled.Code" Size="Size.Small" Class="mr-1" />
                        Visual Studio Community
                    </MudLink>
                    <MudLink Href="https://dotnet.microsoft.com/apps/aspnet/web-apps/blazor" Target="_blank" Style="text-decoration: none;" Class="d-flex align-center" Color="Color.Default">
                        <MudIcon Icon="@Icons.Material.Filled.Web" Size="Size.Small" Class="mr-1" />
                        ASP.NET BlazorWebAssembly
                    </MudLink>
                    <MudLink Href="https://mudblazor.com/" Target="_blank" Style="text-decoration: none;" Class="d-flex align-center" Color="Color.Default">
                        <MudIcon Icon="@Icons.Material.Filled.Palette" Size="Size.Small" Class="mr-1" />
                        MudBlazor
                    </MudLink>
                    <MudLink Href="https://github.com/" Target="_blank" Style="text-decoration: none;" Class="d-flex align-center" Color="Color.Default">
                        <MudIcon Icon="@Icons.Material.Filled.Code" Size="Size.Small" Class="mr-1" />
                        GitHub
                    </MudLink>
                    <MudLink Href="https://github.com/JakeBayer/FuzzySharp" Target="_blank" Style="text-decoration: none;" Class="d-flex align-center" Color="Color.Default">
                        <MudIcon Icon="@Icons.Material.Filled.Search" Size="Size.Small" Class="mr-1" />
                        FuzzySharp
                    </MudLink>
                    <MudLink Href="https://sentry.io/" Target="_blank" Style="text-decoration: none;" Class="d-flex align-center" Color="Color.Default">
                        <MudIcon Icon="@Icons.Material.Filled.BugReport" Size="Size.Small" Class="mr-1" />
                        Sentry
                    </MudLink>
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

