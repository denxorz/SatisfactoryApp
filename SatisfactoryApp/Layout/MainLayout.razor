@inherits LayoutComponentBase

<PageTitle>Statisfactory</PageTitle>

<MudThemeProvider Theme="@theme" IsDarkMode />
<MudDialogProvider />
<MudPopoverProvider />

<MudLayout>
    <Toolbar />
    <MudMainContent Class="main-content">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-2">
            @Body
        </MudContainer>
        <MudPaper Elevation="0" Class="footer-container mt-6">
            <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="d-flex align-center justify-space-between pa-2">
                <div class="d-flex align-center">
                    <MudLink Href="https://dennis.geldhof.eu/" Target="_blank">
                        <MudText Typo="Typo.body2">Denxorz Â© @DateTime.Now.Year</MudText>
                    </MudLink>
                </div>
                <div class="d-flex align-center">
                    <MudIcon Icon="@MudBlazor.FontIcons.MaterialSymbols.Outlined.Build" Size="Size.Small" Class="mr-1 mr-1" />
                    <MudText Typo="Typo.body2" Class="mr-1">v@_buildNumber</MudText>
                    <MudLink Href="https://github.com/denxorz/SatisfactoryApp/issues" Target="_blank" Class="d-flex align-center mr-3" Style="text-decoration: none;">
                        <MudIcon Icon="@MudBlazor.FontIcons.MaterialSymbols.Outlined.Feedback" Size="Size.Small" Class="mr-1" />
                        <MudText Typo="Typo.body2">Requests + Issues + Feedback</MudText>
                    </MudLink>
                    <MudLink Href="https://github.com/denxorz/SatisfactoryApp" Target="_blank" Class="d-flex align-center mr-3" Style="text-decoration: none;">
                        <MudIcon Icon="@MudBlazor.FontIcons.MaterialSymbols.Outlined.BugReport" Size="Size.Small" Class="mr-1" />
                        <MudText Typo="Typo.body2">Project on GitHub</MudText>
                    </MudLink>
                    <MudLink Href="https://github.com/R3dByt3/SatisfactorySaveNet" Target="_blank" Class="d-flex align-center" Style="text-decoration: none;">
                        <MudIcon Icon="@MudBlazor.FontIcons.MaterialSymbols.Outlined.Save" Size="Size.Small" Class="mr-1" />
                        <MudText Typo="Typo.body2">Parsing by SatisfactorySaveNet</MudText>
                    </MudLink>
                </div>
            </MudContainer>
        </MudPaper>
    </MudMainContent>
</MudLayout>

<style>
    .footer-container {
        background-color: transparent !important;
        margin-top: auto;
        position: relative;
        color: var(--mud-palette-appbar-text) !important;
    }
    
    .footer-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 100px;
        right: 100px;
        height: 2px;
        background-color: var(--mud-palette-surface);
    }
    
    .footer-container * {
        color: var(--mud-palette-appbar-text) !important;
    }
</style>

@code {
    private readonly MudTheme theme = new()
    {
        PaletteDark = new PaletteDark
        {
            Primary = "#e59345",
            Secondary = "#e59345",
            Surface = "#212121",
            AppbarBackground = "#212121",
            DrawerBackground = "#212121",
            DrawerText = "#ffffff",
            TextPrimary = "#ffffff",
        }
    };

    private const string _buildNumber = "BUILD_NUMBER_PLACEHOLDER";
}

