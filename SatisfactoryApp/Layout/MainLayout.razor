@inherits LayoutComponentBase

<PageTitle>Statisfactory</PageTitle>

<MudThemeProvider Theme="@theme" IsDarkMode />
<MudDialogProvider />
<MudPopoverProvider />

<MudLayout>
    <Toolbar />
    <MudMainContent Class="main-content">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<MudPaper Elevation="1" Class="footer-container">
    <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="d-flex align-center justify-space-between pa-2">
        <MudLink Href="https://dennis.geldhof.eu/" Target="_blank">
            <MudText Typo="Typo.body2">Denxorz Â© @DateTime.Now.Year</MudText>
        </MudLink>
        <div class="d-flex align-center">
            <MudLink Href="https://github.com/denxorz/SatisfactoryApp/issues" Target="_blank" Class="d-flex align-center mr-3" Style="text-decoration: none;">
                <MudIcon Icon="@Icons.Material.Filled.Feedback" Size="Size.Small" Class="mr-1" />
                <MudText Typo="Typo.body2">Requests + Issues + Feedback</MudText>
            </MudLink>
            <MudLink Href="https://github.com/denxorz/SatisfactoryApp" Target="_blank" Class="d-flex align-center" Style="text-decoration: none;">
                <MudIcon Icon="@Icons.Material.Filled.BugReport" Size="Size.Small" Class="mr-1" />
                <MudText Typo="Typo.body2">GitHub</MudText>
            </MudLink>
        </div>
    </MudContainer>
</MudPaper>

<style>
    .main-content {
        padding-bottom: 64px;
    }
    
    .footer-container {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: var(--mud-palette-appbar-background);
        z-index: 1000;
        border-top: 1px solid rgba(255, 255, 255, 0.12);
    }
</style>

@code {
    private readonly MudTheme theme = new()
    {
        PaletteDark = new PaletteDark
        {
            Primary = "#e59345",
            Secondary = "#e59345",
            Surface = "#212121",
            AppbarBackground = "#212121",
            DrawerBackground = "#212121",
            DrawerText = "#ffffff",
            TextPrimary = "#ffffff",
        }
    };
}

